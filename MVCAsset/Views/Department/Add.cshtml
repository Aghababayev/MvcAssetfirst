@model MVCAsset.Models.Classes.Department
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div style="width:100%; " class="container-fluid">
    <div style="width:65%;float:right">
        <img style="width:100%;height:100%" src="~/Images/Personaladd.jpg" />
    </div>

    <br />
    <form class="form-group" method="post">

        @Html.HiddenFor(x => x.DepartmentID)
        @Html.Label("Department Name")
        <br />
        @Html.TextBoxFor(x => x.DepName, new { @class = "form-control col-md-4", required = "", maxlength = "30" })
        <br />
        <h3 style="color: #EA2027">@ViewBag.msg</h3>


        <button class="  btn  btn-success">ADD</button>
        <a style="margin-left:1%" href="/Department/Index" class="btn btn-info">BACK</a>

    </form>

    </div>
