@using MVCAsset.Models.Classes
@model List<Handover>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container-fluid" style="background-color: #00a8ff  ">
    <h4 style="text-align:center">HANDOVER</h4>
</div>
<table id="tbldep" class="table table-bordered" style="table-layout: fixed">

    <thead>
        <tr style="text-align:center">

            <th>Employee</th>
            <th>Asl</th>
            <th>Device</th>
            <th>Serial Number</th>
            @*<th>Description</th>*@
            <th>Date</th>
            <th>Delete</th>
        </tr>
    </thead>
    @foreach (var hndo in Model)
    {
        <tr>
            <td>@hndo.Employee.Name @hndo.Employee.Surname</td>
            <td>@hndo.Employee.ASL</td>
            <td>@hndo.Device.DevName</td>
            <td>@hndo.SerialNumber</td>
            @*<td>@hndo.Description</td>*@
            <td>@hndo.Time.ToString("yyyy.MM.dd")</td>
            <td><a href="/Handover/Delete/@hndo.HandoverID" class="btn btn-danger" style="width:100%">Delete </a></td>
            @*<td><a href="/Department/GetDep/@dep.DepartmentID" class="btn btn-success" style="width:100%">Update </a></td>
            <td><a href="/Department/Detalis/@dep.DepartmentID" class="btn btn-info" style=" width:100%">Delails</a></td>*@
        </tr>

    }

</table>
<br />
<a href="/Handover/Add" style="margin-top:5px; width:25%" class="align-self-lg-center   btn btn-outline-warning">ADD </a>
<br />




