@using MVCAsset.Models.Classes
@model List<Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container-fluid" style="background-color: #00cec9">
    <h4 style="text-align:center">EMPLOYEE: @ViewBag.cnt</h4>
</div>


<table id="tbl1" class="table table-bordered" style="table-layout:fixed; text-align:center">

    <thead>
        <tr style="text-align:center">

            <th>Name</th>
            <th>Surname</th>
            <th>ASL</th>
            <th>Position</th>
            <th>Department</th>
            @if (User.IsInRole("A") || User.IsInRole("B"))
            {
                <th>Disable</th>
                <th>Update</th>
            }

            @*<th>Detalis</th>*@
        </tr>
    </thead>

    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Name</td>
            <td>@emp.Surname</td>
            <td>@emp.ASL</td>
            <td>@emp.Position</td>
            <td>@emp.Department.DepName</td>

            @if (User.IsInRole("A") || User.IsInRole("B"))
            {
                <td><a href="/Employee/Disable/@emp.EmployeeID" class="btn btn-danger" style="width:100%">Disable </a></td>
                <td><a href="/Employee/GetEmp/@emp.EmployeeID" class="btn btn-success" style="width:100%">Update </a></td>
            }

            @*<td><a href="/Employee/Detalis/@emp.EmployeeID" class="btn btn-info" style="  width:100%">Delails</a></td>*@
        </tr>

    }

</table>
@if (User.IsInRole("A") || User.IsInRole("B"))
{
    <a href="/Employee/Add" style="margin-top:5px; width: 25% " class="align-self-lg-center   btn btn-outline-warning">ADD </a>

}
